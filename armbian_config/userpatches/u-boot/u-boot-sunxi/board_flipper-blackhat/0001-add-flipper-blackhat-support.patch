new file mode 100644
index 00000000000..5ae64f089c2
--- /dev/null
+++ b/arch/arm/dts/flipper-blackhat-a33.dts
@@ -0,0 +1,119 @@
+/dts-v1/;
+#include "sun8i-a33.dtsi"
+#include "sunxi-common-regulators.dtsi"
+
+#include <dt-bindings/gpio/gpio.h>
+#include <dt-bindings/input/input.h>
+
+/ {
+    model = "Flipper Blackhat";
+    compatible = "allwinner,sun8i-a33";
+
+    aliases {
+        ethernet0 = &rtl8723ds;
+        serial0 = &uart0;
+    };
+
+    chosen {
+        stdout-path = "serial0:115200n8";
+    };
+
+    leds {
+        compatible = "gpio-leds";
+
+        led {
+            label = "blackhat:green:usr";
+            gpios = <&r_pio 0 2 GPIO_ACTIVE_HIGH>; /* PL2 */
+        };
+    };
+
+    wifi_pwrseq: wifi-pwrseq {
+        compatible = "mmc-pwrseq-simple";
+        reset-gpios = <&pio 6 12 GPIO_ACTIVE_LOW>; /* PG12 */
+    };
+};
+
+&codec {
+    status = "okay";
+};
+
+&dai {
+    status = "okay";
+};
+
+&ehci0 {
+    status = "okay";
+};
+
+&reg_vcc3v3 {
+    status = "okay";
+};
+
+&mmc0 {
+    vmmc-supply = <&reg_vcc3v3>;
+    bus-width = <4>;
+    cd-gpios = <&pio 1 4 GPIO_ACTIVE_LOW>; /* PB4 */
+    status = "okay";
+};
+
+&mmc1 {
+    vmmc-supply = <&reg_vcc3v3>;
+    vqmmc-supply = <&reg_vcc3v3>;
+    bus-width = <4>;
+    mmc-pwrseq = <&wifi_pwrseq>;
+    pinctrl-0 = <&mmc1_pg_pins>;
+    pinctrl-names = "default";
+    status = "okay";
+    non-removable;
+    no-sd;
+    no-mmc;
+
+    rtl8723ds: wifi@1 {
+        compatible = "realtek,rtw_8723ds";
+        reg = <1>;
+    };
+};
+
+&uart1 {
+    uart-has-rtscts;
+    pinctrl-0 = <&uart1_pg_pins>, <&uart1_cts_rts_pg_pins>;
+    pinctrl-names = "default";
+    status = "okay";
+
+    bluetooth {
+        compatible = "realtek,rtl8723ds-bt";
+        device-wake-gpios = <&pio 6 11 GPIO_ACTIVE_HIGH>; /* PG11 */
+        enable-gpios = <&pio 7 0 GPIO_ACTIVE_HIGH>; /* PH0 */
+        host-wake-gpios = <&pio 6 13 GPIO_ACTIVE_HIGH>; /* PG13 */
+    };
+};
+
+&ohci0 {
+    status = "okay";
+};
+
+&sound {
+    /* Board level jack widgets */
+    simple-audio-card,widgets = "Microphone", "Microphone Jack",
+                    "Headphone", "Headphone Jack";
+    /* Board level routing. First 2 routes copied from SoC level */
+    simple-audio-card,routing =
+        "Left DAC", "DACL",
+        "Right DAC", "DACR",
+        "HP", "HPCOM",
+        "Headphone Jack", "HP",
+        "MIC1", "Microphone Jack",
+        "Microphone Jack", "MBIAS";
+    status = "okay";
+};
+
+&uart0 {
+    pinctrl-names = "default";
+    pinctrl-0 = <&uart0_pb_pins>;
+    status = "okay";
+};
+
+&usb_otg {
+    dr_mode = "otg";
+    status = "okay";
+};
